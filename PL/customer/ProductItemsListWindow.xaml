<Window x:Class="PL.customer.ProductItemsListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.customer"
        mc:Ignorable="d"
        Title="ProductItemsListWindow" Height="450" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource self}}">
    <Grid>
  <Button Content="go to cart" HorizontalAlignment="Left" Margin="712,53,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.444,9.962" Click="Button_Click"/>
  <ListView ItemsSource="{Binding productItemsList}" SelectedItem="{Binding selectedProductItem, Mode=OneWayToSource}" Margin="0,68,381,77" SelectionChanged="ListView_SelectionChanged">
   <ListView.View>
    <GridView>
     <GridViewColumn/>
    </GridView>
   </ListView.View>
  </ListView>
  <ComboBox ItemsSource="{Binding categories}" SelectedItem="{Binding selectedCategory}" HorizontalAlignment="Left" Margin="545,52,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="ComboBox_SelectionChanged"/>
  <Button Content="order by categories" HorizontalAlignment="Left" Margin="424,53,0,0" VerticalAlignment="Top" Click="ButtonGroupingByCategory_Click"/>

 </Grid>
</Window>
